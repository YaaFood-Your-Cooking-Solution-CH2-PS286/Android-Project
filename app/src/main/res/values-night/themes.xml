<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YaFood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary600</item>
        <item name="colorOnPrimary">@color/primary100</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.YaFood" parent="Base.Theme.YaFood">
        <item name="materialButtonStyle">@style/YaFood.Button</item>
        <item name="bottomNavigationStyle">@style/YaFood.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/FabScan</item>
    </style>

<!--    <style name="Theme.YaFood.WithActionBar" parent="Theme.YaFood">-->
<!--        <item name="windowActionBar">true</item>-->
<!--        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>-->
<!--    </style>-->

    <style name="YaFood.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@drawable/bottom_navigation_bg</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">28dp</item>
    </style>

    <style name="YaFood.Button" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="shapeAppearance">@style/RoundedButton</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="RoundedButton" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="FabScan" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/neutral300</item>
    </style>
</resources>